# Udyam Registration Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=udyam_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1h

# SMS/OTP Service Configuration (for production)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.msg91.com/api/v5/otp/

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
OTP_LIMIT_WINDOW_MS=300000
OTP_LIMIT_MAX_REQUESTS=3

# Logging
LOG_LEVEL=info
LOG_FILE=logs/udyam-api.log
